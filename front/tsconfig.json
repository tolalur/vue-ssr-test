{
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts",
    "dist"
  ],
  "include": [
    "src/**/*",
    "../common/**/*"
  ],
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}
